{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make:test",
      "type": "process",
      "command": "make",
      "args": [
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "make:compile",
      "type": "process",
      "command": "make",
      "args": [
        "compile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "make:watchcompile",
      "detail": "Start TypeScript compiler in watch mode",
      "type": "process",
      "command": "make",
      "args": [
        "watchcompile"
      ],
      "problemMatcher": [
        "$tsc-watch",
      ],
      "group": "build",
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1,
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOn": "npm: install"
    },
    {
      "label": "make:watch",
      "detail": "Start Test suite in watch mode",
      "type": "process",
      "command": "make",
      "args": [
        "watch"
      ],
      "problemMatcher": [],
      "group": "test",
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "echo": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
